<!DOCTYPE html>
<html>
  <head>
    <title>Move and Groove</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column" style="min-height: 100vh">
  <nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <a class="navbar-brand text-info" href="/">Move & Groove</a>
    <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        <li class="nav-item">
          <a class="nav-link text-light" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-light" href="/activity_logs">Activity</a>
        </li>
        <li class="nav-item">
          <% if admin_signed_in? %>
            <a class="nav-link text-light" href="/activities/new">Add Activity</a>
          <% else %>
            <a class="nav-link text-light" href="https://www.ereich.eu"> About</a>
          <% end %>       
      </ul>  
      <div>
        <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
          </li>
          <li class="nav-item">
            <% if user_signed_in? %>
              <a class="nav-link text-light">Signed in as <%= current_user.email %></a>
          </li>
          <li class="nav-item">
              <%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: "nav-link text-light" %>
          </li>
          <li class="nav-item">
            <% else %>
              <%= link_to 'Register', new_user_registration_path, class: "nav-link text-light" %> 
          </li>
          <li class="nav-item">
              <%= link_to 'Sign in', new_user_session_path, class: "nav-link text-light" %>
            <% end %>          
          </li>
        </ul>
      </div>   
    </div>    
  </nav>
    
    <%= yield %>
      <footer class="footer bg-dark">
        <div class="text-center py-3">
          <a class="text-white mx-3" href="/"> Home</a>
          <a class="text-white mx-3" href="/activity_logs"> Activity</a>
          <a class="text-white mx-3" href="https://www.ereich.eu"> About</a>
          <% if admin_signed_in? %>
            <a class="text-white mx-3" href="/activities">Add Activity</a>
          <% else %>
          <% end %> 
        </div>
        <div class="footer-copyright text-center py-3">
          <a class="text-white" href="https://www.ereich.eu">&copy 2020 Move & Groove</a>
        </div>
      </footer>
  </body>
</html>
